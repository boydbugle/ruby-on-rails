
<%= render('layouts/errors', :object => @blog) %>

<%= form_for @blog, html: { multipart: true } do |f| %>
  <div class="control-group">
      <%= f.label :title %>
      <div class="controls">
        <%= f.text_field :title %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :image %>
      <div class="controls">
        <%= f.file_field :image %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :content %>
      <div class="controls">
        <%= f.text_area :content, cols: "30", rows: "10" %>
      </div>
    <div class="control-group">
      <%= f.label :link %>
      <div class="controls">
        <%= f.text_field :link %>
    </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <%= f.submit 'submit', class: 'btn btn-primary'%>
      </div>
    </div>
<% end %>