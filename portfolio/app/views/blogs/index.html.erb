<h1>Blogs#index</h1>
<p>Find me in app/views/blogs/index.html.erb</p>

<% if @blogs.any? %>
    <h3>my blogs!!</h3>
    <% @blogs.each do |blog|%>
        <p><%= link_to blog.link do%><%= blog.title%><%end%></p>
        <p><%= link_to blog.link do%><%= image_tag(blog.image.url(:large))%><%end%></p>
        <p><%= blog.content %></p>
    <% end %>
    <% else %>
        <h3>There are no available blogs yet</h3>
<% end %>